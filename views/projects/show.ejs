<%include ../partials/header %>

<div class="container">
  <div class="row">
     <div class="col s12 m12">
       <div class="card">
         <div class="card-image">
           <img src="<%=project.image %>"/>
           <span class="card-title"><%= project.name%></span>
         </div>
         <div class="card-content">
          <p><%= project.description %></p>
          <p><em> Submitted by <%= project.author.username %> </em></p>
         </div>
         <div class="card-action">
           <a class="btn" target="_blank" href="<%= project.project%>">Go to Project</a>
           <a class="btn green right" href="/projects/<%= project._id%>/edit">Edit</a>
           <form style="display: inline, margin-right: 5px" class="right red" action="/projects/<%= project._id %>?_method=DELETE" method="POST">
             <button class="btn btn-xs btn-danger">Delete</button>
          </form>
         </div>
       </div>
     </div>
</div>
<p>
  <a class="btn right" href="/projects/<%= project._id %>/comments/new">Add new comment</a>
</p>

<% project.comments.forEach(function(comment){ %>
  <p>
      <strong><%= comment.author.username %>: </strong>  <%= comment.text %>
  </p>
<% }) %>
<hr>



<%include ../partials/footer %>
